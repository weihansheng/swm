<?xml version="1.0" encoding="utf-8"?> 
<selector 
    xmlns:android="http://schemas.android.com/apk/res/android"> 
    <item 
        android:state_selected="true">
        <shape> 
  
            <gradient 
                android:startColor="#40a3ff" 
                android:endColor="#40a3ff" 
                android:type="radial" 
                android:gradientRadius="50"/> 
         
            <stroke 
                android:width="1dp" 
                android:color="#40a3ff" 
                android:dashGap="3dp"/>
            
         
            <corners 
                android:radius="5dp"/> 
            <padding 
                android:left="10dp" 
                android:top="5dp" 
                android:right="10dp" 
                android:bottom="5dp"/> 
        </shape> 
    </item>
   
    <item
        android:state_selected="false"> 
        <shape> 
            <stroke 
                android:width="1dp" 
                android:color="#40a3ff" 
                android:dashGap="3dp"/>
            <gradient 
                android:startColor="#00000000" 
                android:endColor="#00000000" 
                android:type="radial" 
                android:gradientRadius="50"/> 
            <corners 
                android:radius="5dp"/> 
            <padding 
                android:left="10dp" 
                android:top="5dp" 
                android:right="10dp" 
                android:bottom="5dp"/> 
        </shape> 
    </item>

</selector> 