<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <uk.co.senab.photoview.PhotoView
            android:id="@+id/photoView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="0dip" />

        <example.swm.app.widget.ProgressWheel
            android:id="@+id/progressWheel"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_gravity="center"
            ProgressWheel:barColor="#99d64b"
            ProgressWheel:barLength="30dp"
            ProgressWheel:barWidth="3dp"
            ProgressWheel:delayMillis="0"
            ProgressWheel:rimColor="#44000000"
            ProgressWheel:rimWidth="3dp"
            ProgressWheel:spinSpeed="3dp"
            ProgressWheel:text=""
            ProgressWheel:textColor="#339BB9"
            ProgressWheel:textSize="14sp" />

        <CheckBox
            android:id="@+id/child_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="20dip"
            android:layout_marginTop="20dip"
            android:button="@drawable/custom_checkbox"
            android:checked="true" />
    </FrameLayout>

</merge>